generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // En un caso real esto iría hasheado, aquí lo haremos simple primero
  createdAt DateTime @default(now())
}

model Appointment {
  id          String   @id @default(uuid())
  date        DateTime // Fecha y hora exacta del turno (ej: 2023-10-25 14:00:00)
  isBooked    Boolean  @default(false)
  clientName  String?  // Opcional: nombre del cliente si está reservado
  createdAt   DateTime @default(now())

  // Índices para que las búsquedas por fecha sean rápidas (Performance 101)
  @@index([date])
}

model BusinessConfig {
  id          String   @id @default(uuid())
  startHour   Int      @default(9)  // Hora de apertura (0-23)
  endHour     Int      @default(18) // Hora de cierre (0-23)
  interval    Int      @default(30) // Duración del turno en minutos
  updatedAt   DateTime @updatedAt
}